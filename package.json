{
    "name": "mono-repo-template",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "type": "module",
    "workspaces": [
        "backend",
        "frontend"
    ],
    "scripts": {
        "backend": "npm run dev -w backend",
        "frontend": "npm run dev -w frontend",
        "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
        "build": "npm run build --workspaces --if-present",
        "clean": "npm run clean -ws --if-present && rimraf node_modules",
        "reinstall": "rimraf node_modules package-lock.json && npm install",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write ."
    },
    "keywords": [],
    "author": "Siva Peddinti (Build With Sonu)",
    "license": "ISC",
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "concurrently": "^9.2.1",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^16.5.0",
        "prettier": "^3.7.4",
        "rimraf": "^6.1.2"
    }
}
